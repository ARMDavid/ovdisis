#!/bin/sh

ofbis_libs="@ofbis_libs@"
ofbis_cflags="@ofbis_cflags@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: ovdisis-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo $ofbis_cflags -I@OSISINCLUDE@
      ;;
    --libs)
      my_ofbis_libs=
      libdirs=-L@libdir@
      for i in $ofbis_libs ; do
        if test $i != -L@libdir@ ; then
          if test -z "$my_ofbis_libs" ; then
            my_ofbis_libs="$i"
          else
            my_ofbis_libs="$my_ofbis_libs $i"
          fi
        fi
      done
      echo $libdirs -lovdisis $my_ofbis_libs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

