dnl Process this file with autoconf to produce a configure script.
AC_INIT(otestis.c)

PACKAGE=ovdisis
VERSION=0.0.0

AM_INIT_AUTOMAKE($PACKAGE, $VERSION, no-define)

AM_CONFIG_HEADER(config.h)

dnl Set CFLAGS
CFLAGS="$CFLAGS -Wall -O2 -pipe -fomit-frame-pointer -fno-strength-reduce"

AM_PROG_LIBTOOL

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_RANLIB

dnl Checks for libraries.
AC_CHECK_LIB(m, main)
AC_CHECK_LIB(fb, main)

dnl Checks for header files.
AC_HEADER_STDC
dnl AC_CHECK_HEADERS(fcntl.h sys/ioctl.h sys/time.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
dnl AC_C_CONST
dnl AC_C_INLINE
dnl AC_TYPE_OFF_T
dnl AC_HEADER_TIME

AC_SUBST(VERSION)

AC_OUTPUT(fntread/Makefile src/Makefile vdibind/Makefile vdi_dump/Makefile Makefile ovdisis-config)
